<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".TopupWithdrawActivity">

    <TextView
        android:id="@+id/tvTitleWithdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Withdraw"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNamaDompet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tabungan Pensiun"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/tvTotalDompet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Asset:\nRp60.000.000,00"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/tvTitleStatusDompet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WITHDRAW ASSET"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNominalDompet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nominal"
        android:inputType="number" />

    <EditText
        android:id="@+id/etKeteranganDompet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Keterangan"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis" />

    <Spinner
        android:id="@+id/spinnerStatusDompet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/jenis" />

    <EditText
        android:id="@+id/etPINDompet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="PIN"
        android:inputType="number"
        android:password="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btActionDompet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WITHDRAW" />

    <Button
        android:id="@+id/btBackDompet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:text="BACK" />
</LinearLayout>