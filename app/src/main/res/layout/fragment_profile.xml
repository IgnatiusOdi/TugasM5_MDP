<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentProfile">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_card"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvNamaUser_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi, $nama !"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvNomorRekening_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Rekening : $norek"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvAsset_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asset : \n Rp. 150.000.000,00"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>